@{
    ViewBag.Title = "出库订单";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="http://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">

<div class="page-header">
    <h1><small>出库订单</small></h1>
</div>

<table class="table table-hover ">
    <tr>
        <td>客户</td>
        <td>交易时间</td>
        <td>交易金额</td>
        <td>负责人</td>
        <td>商品</td>
        <td>数量</td>
        <td>备注</td>
        <td>操作</td>
    </tr>
    <tr>
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                </ul>
            </div>
        </td>@*客户*@
        <td>
            <input data-provide="datepicker" style="width:100px;height:32px" class="form-control">
        </td>@*交易时间*@
        <td>
            <div class="input-group">
                <span class="input-group-addon">¥</span>
                <input type="number" class="form-control" style="width:100px;height:32px">
            </div>
        </td>@*交易金额*@
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                </ul>
            </div>
        </td>@*负责人*@
        <td>
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                </ul>
            </div>
        </td>@*商品*@
        <td>
            <input type="number" value="" style="width:80px;height:32px" size="16" class="form-control">
        </td>@*数量*@
        <td>
            <input style="width:100px;height:32px" type="text" class="form-control">
        </td>@*备注*@
        <td>
            <button type="button" class="btn btn-danger">移除</button>
        </td>@*操作*@
    </tr>
</table>
<div style="float:right;">
    <label style="font-size:20px;line-height:20px;padding-right: 80px;">总数量：<strong style="color:#ff0000;">0</strong> 件</label>
    <label style="font-size:20px;line-height:20px;padding-right: 50px;">总金额：<strong style="color:#ff0000;">00.00</strong></label>
    <button type="button" class="btn btn-info btn-primary btn-lg">发 出 订 单</button>
</div>

<script src="http://cdn.bootcss.com/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
<script>window.jQuery || document.write('<script src="~/js/jquery-1.11.0.min.js"><\/script>')</script>
<script type="text/javascript" src="~/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
    $(function () {
        $('.datepicker').datepicker({
            language: 'zh-CN'
        });
    })
</script>
